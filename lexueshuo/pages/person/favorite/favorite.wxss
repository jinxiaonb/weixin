/* pages/person/favorite/favorite.wxss */

.overflow{
  overflow: hidden;
}
.hidden{
  display: none;
}
.f-left{
  float:left;
}
.f-right{
  float: right;
}




.filter-img{
  width: 100%;
  margin-top: 5%;
}
.filter-sec{
  margin-left: 5%;
  margin-right: 5%;
  display: inline-block;
  width: 15%;
}
.filter-img image{
  width: 60px;
  height: 60px;
}
.filter-title{
  font-size: 14px;
  text-align: center;
}

.filter-list{
  font-size: 16px;
  margin-top: 30px;
}
.list{
  width: 90%;
  margin: 30px auto;
  border: 1px solid #dedede;
  border-radius: 8px;
  font-size: 18px;
}
.list-title,.list-detail{
  height: 128rpx;
  line-height: 128rpx;
}
.list-desc{
  height: 128rpx;
  line-height: 128rpx;
  border-top: 1px solid #dedede;
  font-size: 14px;
}

.cancel{
  padding: 10rpx 30rpx;
  color: #dedede;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.gt{
  color: #ccc;
}
.list-img{
  border-bottom: 1px solid #dedede;
  padding: 10px 0;
}